libasio.a: asio.o
	ar ru libasio.a asio.o
endif

check: $(UNIT_TEST_EXES) $(addprefix run.,$(UNIT_TEST_EXES))

$(addprefix run.,$(UNIT_TEST_EXES))::
	@echo === Running $(@:run.%=%) ===
	@$(@:run.%=%)
	@echo.

clean:
	-del libasio.a asio.o
	-del /q /s tests\*.exe
	-del /q /s tests\*.o
	-del /q /s examples\*.exe
	-del /q /s examples\*.o

$(UNIT_TEST_EXES): %.exe: %.o
	g++ -o$@ $(LDFLAGS) $< $(LIBS)

$(PERFORMANCE_TEST_EXES) $(EXAMPLE_EXES): %.exe: %.o
