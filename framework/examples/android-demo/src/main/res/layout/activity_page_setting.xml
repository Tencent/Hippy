<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".PageSetting">

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/setting_navigation_bar"
    android:layout_width="match_parent"
    android:layout_height="54dp"
    android:background="@color/white"
    android:clickable="true"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">
    <TextView
      android:id="@+id/page_setting_navigation_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:gravity="center"
      android:text="Setting"
      android:textColor="@color/black"
      android:textFontWeight="500"
      android:textSize="17sp"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintRight_toRightOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
      android:id="@+id/setting_navigation_back"
      android:layout_width="55dp"
      android:layout_height="54dp"
      android:background="@color/white"
      android:clickable="true"
      android:focusable="true"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent" >

      <ImageView
        android:id="@+id/setting_back"
        android:layout_width="9dp"
        android:layout_height="17dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/back_2x"
        android:clickable="false"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
  </androidx.constraintlayout.widget.ConstraintLayout>

  <androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/setting_container"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:clickable="false"
    android:background="@color/home_background"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toBottomOf="@id/setting_navigation_bar"
    app:layout_constraintBottom_toBottomOf="parent" >

    <ImageView
      android:id="@+id/setting_building"
      android:layout_width="248dp"
      android:layout_height="210dp"
      android:layout_marginTop="233dp"
      android:src="@drawable/page_setting_building_2x"
      android:clickable="false"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintTop_toTopOf="parent" />

    <TextView
      android:id="@+id/page_setting_building_title"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="3dp"
      android:gravity="center"
      android:text="页面建设中..."
      android:textColor="#7B889C"
      android:textFontWeight="400"
      android:textSize="16sp"
      app:layout_constraintLeft_toLeftOf="@id/setting_building"
      app:layout_constraintBottom_toBottomOf="@id/setting_building"
      app:layout_constraintRight_toRightOf="@id/setting_building" />

  </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>